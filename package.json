{
  "name": "appointment-booking-system",
  "version": "1.0.0",
  "description": "A TypeScript-based Node.js full-stack appointment booking system for consulting sessions",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=@appointments/frontend",
    "dev:backend": "npm run dev --workspace=@appointments/backend",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "npm run type-check --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules",
    "db:migrate": "npm run db:migrate --workspace=@appointments/backend",
    "db:generate": "npm run db:generate --workspace=@appointments/backend",
    "db:seed": "npm run db:seed --workspace=@appointments/backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.2.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "appointment",
    "booking",
    "scheduling",
    "nextjs",
    "fastify",
    "typescript",
    "google-calendar",
    "firebase"
  ],
  "author": "Appointment System Team",
  "license": "MIT"
}